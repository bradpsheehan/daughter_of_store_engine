:coffee
  $ ->
    $('div.wrapper').hide()

    # get current state of radio
    selectedType = if $('.discount_percent input:checked').val() is "false" then "dollar" else "percent"

    # update toggle buttons to match
    $("#btn-\#{ selectedType }").addClass('active')

    # wire up event handler to make toggle buttons update radio buttons
    $(document).on 'click', 'button[data-toggle=button]', (e) ->
      identifier = if $(this).attr('id') is "btn-percent" then "true" else "false"
      $("#discount_percent_\#{identifier}").prop('checked', true)

.span8
  = simple_form_for [ current_store, :admin, @discount ] do |s|
    %h5 Code Name
    = s.input :name, label:false, input_html:{placeholder: "SUPER100OFF"}
    %h5 Discount Type
    .wrapper
      = s.input :percent, label:false, as: :radio
    .discount-amount
      = s.input :amount, style: "float: right; width: 40%", label: false, input_html:{placeholder: "100"}
      .btn-group{"data-toggle" => "buttons-radio", style: "float: left"}
        %button#btn-dollar.btn.btn-primary{"data-toggle" => "button", :name => "option1", :type => "button", :value => "1"} $
        %button#btn-percent.btn.btn-primary{"data-toggle" => "button", :name => "option2", :type => "button", :value => "2"} %
    = s.hidden_field :store_id, value: current_store.id
    = s.submit "Create Code", class: "btn btn-custom-lighten span2",style: "display: block;"




