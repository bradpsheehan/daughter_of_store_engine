- @discounts.each do |discount|
  %tr
    %td= discount.name
    %td= discount.amount
    %td
      .btn-group
        %button.btn.dropdown-toggle{"data-toggle" => "dropdown" }
          = t('model.modify')
          %span.caret
        %ul.dropdown-menu
          %li
            = link_to 'Edit', edit_store_admin_discount_path(current_store, discount.id)
          %li.divider
          %li
            = link_to 'Delete', store_admin_discount_path(current_store, discount.id),
            :method => :delete, :data => { :confirm => 'Are you sure?' }
